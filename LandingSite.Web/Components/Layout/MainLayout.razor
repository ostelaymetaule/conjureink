@inherits LayoutComponentBase
<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Dark">
        <MudIconButton Icon="@Icons.Material.Outlined.Home" Color="Color.Inherit" Edge="Edge.Start" Size="@Size.Large" Href="/" />
        <MudDivider Vertical="true" FlexItem="true" DividerType="DividerType.Middle" />
        @* <MudIconButton Icon="@Icons.Material.Sharp.BurstMode" Color="Color.Inherit" Edge="Edge.Start" Size="@Size.Large" Href="/Art20" />
        <MudIconButton Icon="@Icons.Material.Rounded.PhotoCamera" Color="Color.Inherit" Edge="Edge.Start" Size="@Size.Large" Href="/Photos" />
        <MudIconButton Icon="@Icons.Material.Rounded.Window" Color="Color.Inherit" Edge="Edge.Start" Size="@Size.Large" Href="/Comic101" />
        <MudIconButton Icon="@Icons.Material.Rounded.WineBar" Color="Color.Inherit" Edge="Edge.Start" Size="@Size.Large" Href="/Coasters" /> *@
        
            @foreach (var page in Pages)
            {
            string iconName = page.Item1;
            string href = page.Item2;
            <MudIconButton Icon="@iconName" Color="Color.Inherit" Edge="Edge.Start" Size="@Size.Large" Href="@href" />
            }
         
        <MudDivider Vertical="true" FlexItem="true" DividerType="DividerType.Middle" />
        <MudIconButton Icon="@Icons.Material.Sharp.ContactMail" Color="Color.Inherit" Edge="Edge.Start" Size="@Size.Large" Href="/About" />
        <MudSpacer></MudSpacer>
        <MudText Typo="Typo.h4">conjure.ink</MudText>
    </MudAppBar>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

