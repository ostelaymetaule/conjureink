@inherits LayoutComponentBase
<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudNavMenu Color="Color.Dark" Class="d-none d-sm-flex">
        <MudIconButton Icon="@Icons.Material.Outlined.Home" Color="Color.Inherit" Edge="Edge.Start" Size="@Size.Large" Href="/" />
        <MudDivider Vertical="true" FlexItem="true" DividerType="DividerType.Middle" />
        @foreach (var page in Pages)
        {
            string iconName = page.Item1;
            string href = page.Item2;
            <MudIconButton Icon="@iconName" Color="Color.Inherit" Edge="Edge.Start" Size="@Size.Large" Href="@href" />
        }
        <MudDivider Vertical="true" FlexItem="true" DividerType="DividerType.Middle" />
        <MudIconButton Icon="@Icons.Material.Sharp.ContactMail" Color="Color.Inherit" Edge="Edge.Start" Size="@Size.Large" Href="/About" />
        <MudSpacer></MudSpacer>
        <MudText Typo="Typo.h4">conjure.ink</MudText>
    </MudNavMenu>
    <MudMainContent Class="d-none d-sm-flex ">
        <MudContainer  MaxWidth="MaxWidth.ExtraLarge">
            @Body
        </MudContainer>
    </MudMainContent>

    <MudGrid Class="d-flex d-sm-none">
        <MudItem xs="1">
            <MudPaper Class="pa-4 ma-2" Elevation="0">
                <MudIconButton Icon="@Icons.Material.Outlined.Home" Color="Color.Inherit" Edge="Edge.Start" Size="@Size.Large" Href="/" />
                <MudIconButton Icon="@Icons.Material.Sharp.ContactMail" Color="Color.Inherit" Edge="Edge.Start" Size="@Size.Large" Href="/About" />
                <MudDivider  Class="pa-4 ma-0" DividerType="DividerType.Inset" />
                @foreach (var page in Pages)
                {
                    string iconName = page.Item1;
                    string href = page.Item2;
                    <MudIconButton Icon="@iconName" Color="Color.Inherit" Edge="Edge.Start" Size="@Size.Large" Href="@href" />
                }
            </MudPaper>
        </MudItem>
        <MudItem xs="11">
            <MudMainContent Class="pa-2 ma-2">
                <MudContainer MaxWidth="MaxWidth.ExtraLarge">
                    @Body
                </MudContainer>
            </MudMainContent>
        </MudItem>
    </MudGrid>



</MudLayout>

@code {

    (string, string)[] Pages = new[] {
        (Icons.Material.Sharp.BurstMode,"/Art20"),
        (Icons.Material.Outlined.DirtyLens,"/Abstract"),
        (Icons.Material.Outlined.DirectionsWalk,"/Akt"),
        (Icons.Material.Outlined.Woman,"/Bon"),
        (Icons.Material.Outlined.Pets,"/Cats"),
        (Icons.Material.Rounded.PhotoCamera,"/Photos"),
        (Icons.Material.Rounded.Window,"/Comic101"),
        (Icons.Material.Rounded.WineBar,"/Coasters"),
        (Icons.Material.Outlined.ColorLens,"/Color"),
        (Icons.Material.Outlined.Coffee,"/Cups"),
        (Icons.Custom.Uncategorized.ChessKnight,"/D"),
        (Icons.Custom.Uncategorized.Fish,"/Fish"),
        (Icons.Material.Outlined.Castle,"/Dnd"),
        (Icons.Material.Outlined.NoteAlt,"/Ink"),
        (Icons.Material.Outlined.FormatPaint,"/Items")

        };
}
